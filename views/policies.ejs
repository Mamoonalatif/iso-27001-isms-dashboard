<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Policy Management - ISO 27001 ISMS</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    
    <style>
        :root {
            --primary-color: #1e3a8a;
            --secondary-color: #3b82f6;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --light-color: #f8fafc;
        }
        body { background-color: var(--light-color); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .sidebar { background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); min-height: 100vh; box-shadow: 2px 0 10px rgba(0,0,0,0.1); }
        .sidebar .nav-link { color: rgba(255,255,255,0.9); padding: 0.75rem 1rem; margin: 0.25rem 0; border-radius: 0.5rem; transition: all 0.3s ease; }
        .sidebar .nav-link:hover, .sidebar .nav-link.active { background-color: rgba(255,255,255,0.2); color: white; transform: translateX(5px); }
        .card { border: none; border-radius: 1rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .iso-logo { width: 40px; height: 40px; background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 10px; }
        .certification-badge { position: absolute; top: 1rem; right: 1rem; background: linear-gradient(135deg, #ffd700, #ffed4e); color: #1f2937; padding: 0.5rem 1rem; border-radius: 2rem; font-weight: 600; font-size: 0.85rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); z-index: 1000; }
        .table th { background-color: var(--primary-color); color: white; border: none; }
        .policy-card { border-left: 4px solid var(--primary-color); }
        .policy-card:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(0,0,0,0.15); }
    </style>
</head>
<body>
    <!-- Certification Badge -->
    <div class="certification-badge">
        <i class="fas fa-certificate me-1"></i>
        ISO 27001 Certified
    </div>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="d-flex align-items-center mb-4">
                        <div class="iso-logo">ISO</div>
                        <h5 class="text-white mb-0">27001 ISMS</h5>
                    </div>
                    
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" href="/"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/assets"><i class="fas fa-server me-2"></i>Asset Management</a></li>
                        <li class="nav-item"><a class="nav-link" href="/risks"><i class="fas fa-exclamation-triangle me-2"></i>Risk Management</a></li>
                        <li class="nav-item"><a class="nav-link" href="/incidents"><i class="fas fa-bell me-2"></i>Incidents</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/policies"><i class="fas fa-file-alt me-2"></i>Policies</a></li>
                        <li class="nav-item"><a class="nav-link" href="/controls"><i class="fas fa-shield-alt me-2"></i>Security Controls</a></li>
                        <li class="nav-item"><a class="nav-link" href="/audits"><i class="fas fa-search me-2"></i>Audits</a></li>
                        <li class="nav-item"><a class="nav-link" href="/reports"><i class="fas fa-chart-bar me-2"></i>Reports</a></li>
                    </ul>
                </div>
            </nav>
            
            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pt-3 pb-2 mb-3">
                    <!-- Header -->
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center border-bottom mb-4">
                        <h1 class="h2 text-primary">
                            <i class="fas fa-file-alt me-2"></i>
                            Policy Management (ISO 27001 A.5.1)
                        </h1>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPolicyModal">
                            <i class="fas fa-plus me-1"></i>Add Policy
                        </button>
                    </div>
                    
                    <!-- Policy Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card text-center bg-primary text-white">
                                <div class="card-body">
                                    <h3><%= policies.length %></h3>
                                    <p class="mb-0">Total Policies</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-success text-white">
                                <div class="card-body">
                                    <h3><%= policies.filter(p => p.status === 'Active').length %></h3>
                                    <p class="mb-0">Active Policies</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-warning text-white">
                                <div class="card-body">
                                    <h3><%= policies.filter(p => moment(p.reviewDate).diff(moment(), 'days') <= 30).length %></h3>
                                    <p class="mb-0">Due for Review</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-info text-white">
                                <div class="card-body">
                                    <h3><%= new Set(policies.map(p => p.category)).size %></h3>
                                    <p class="mb-0">Categories</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Policy Framework Overview -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="fas fa-sitemap me-2"></i>ISO 27001 Policy Framework</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <h6 class="text-primary">Organizational Policies</h6>
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check-circle text-success me-2"></i>Information Security Policy</li>
                                                <li><i class="fas fa-check-circle text-success me-2"></i>Risk Management Policy</li>
                                                <li><i class="fas fa-check-circle text-success me-2"></i>Incident Response Policy</li>
                                                <li><i class="fas fa-exclamation-circle text-warning me-2"></i>Business Continuity Policy</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-4">
                                            <h6 class="text-primary">Technical Policies</h6>
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check-circle text-success me-2"></i>Access Control Policy</li>
                                                <li><i class="fas fa-check-circle text-success me-2"></i>Cryptography Policy</li>
                                                <li><i class="fas fa-exclamation-circle text-warning me-2"></i>Network Security Policy</li>
                                                <li><i class="fas fa-times-circle text-danger me-2"></i>Mobile Device Policy</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-4">
                                            <h6 class="text-primary">Operational Policies</h6>
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-check-circle text-success me-2"></i>Data Protection Policy</li>
                                                <li><i class="fas fa-exclamation-circle text-warning me-2"></i>Backup & Recovery Policy</li>
                                                <li><i class="fas fa-times-circle text-danger me-2"></i>Supplier Security Policy</li>
                                                <li><i class="fas fa-times-circle text-danger me-2"></i>Physical Security Policy</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Policy Cards -->
                    <div class="row mb-4">
                        <% policies.forEach(policy => { %>
                            <div class="col-md-6 mb-3">
                                <div class="card policy-card h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <h5 class="card-title text-primary mb-0">
                                                <i class="fas fa-file-contract me-2"></i>
                                                <%= policy.title %>
                                            </h5>
                                            <span class="badge bg-<%= policy.status === 'Active' ? 'success' : 'secondary' %>">
                                                <%= policy.status %>
                                            </span>
                                        </div>
                                        <p class="card-text text-muted"><%= policy.description %></p>
                                        <div class="row small">
                                            <div class="col-6">
                                                <strong>Version:</strong> <%= policy.version %>
                                            </div>
                                            <div class="col-6">
                                                <strong>Category:</strong> <%= policy.category %>
                                            </div>
                                            <div class="col-6">
                                                <strong>Approved By:</strong> <%= policy.approvedBy %>
                                            </div>
                                            <div class="col-6">
                                                <strong>Approved:</strong> <%= moment(policy.approvedDate).format('DD/MM/YYYY') %>
                                            </div>
                                            <div class="col-12 mt-2">
                                                <strong>Next Review:</strong> 
                                                <span class="<%= moment(policy.reviewDate).diff(moment(), 'days') <= 30 ? 'text-warning' : 'text-muted' %>">
                                                    <%= moment(policy.reviewDate).format('DD/MM/YYYY') %>
                                                    (<%= moment(policy.reviewDate).fromNow() %>)
                                                </span>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <button class="btn btn-sm btn-outline-primary me-2">
                                                <i class="fas fa-eye"></i> View
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary me-2">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-download"></i> Download
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    
                    <!-- Policies Table -->
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Policy Register</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped data-table" id="policiesTable">
                                    <thead>
                                        <tr>
                                            <th>Policy Title</th>
                                            <th>Version</th>
                                            <th>Category</th>
                                            <th>Status</th>
                                            <th>Approved By</th>
                                            <th>Approved Date</th>
                                            <th>Review Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% policies.forEach(policy => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= policy.title %></strong><br>
                                                    <small class="text-muted"><%= policy.description %></small>
                                                </td>
                                                <td><%= policy.version %></td>
                                                <td><%= policy.category %></td>
                                                <td>
                                                    <span class="badge bg-<%= policy.status === 'Active' ? 'success' : 'secondary' %>">
                                                        <%= policy.status %>
                                                    </span>
                                                </td>
                                                <td><%= policy.approvedBy %></td>
                                                <td><%= moment(policy.approvedDate).format('DD/MM/YYYY') %></td>
                                                <td>
                                                    <span class="<%= moment(policy.reviewDate).diff(moment(), 'days') <= 30 ? 'text-warning fw-bold' : '' %>">
                                                        <%= moment(policy.reviewDate).format('DD/MM/YYYY') %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary" title="Edit Policy">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-info" title="View Policy">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#policiesTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[6, 'asc']] // Sort by Review Date
            });
        });
    </script>
</body>
</html>
