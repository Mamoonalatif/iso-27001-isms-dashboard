<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security Controls - ISO 27001 ISMS</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    
    <style>
        :root {
            --primary-color: #1e3a8a;
            --secondary-color: #3b82f6;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --light-color: #f8fafc;
        }
        body { background-color: var(--light-color); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .sidebar { background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); min-height: 100vh; box-shadow: 2px 0 10px rgba(0,0,0,0.1); }
        .sidebar .nav-link { color: rgba(255,255,255,0.9); padding: 0.75rem 1rem; margin: 0.25rem 0; border-radius: 0.5rem; transition: all 0.3s ease; }
        .sidebar .nav-link:hover, .sidebar .nav-link.active { background-color: rgba(255,255,255,0.2); color: white; transform: translateX(5px); }
        .card { border: none; border-radius: 1rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .iso-logo { width: 40px; height: 40px; background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 10px; }
        .certification-badge { position: absolute; top: 1rem; right: 1rem; background: linear-gradient(135deg, #ffd700, #ffed4e); color: #1f2937; padding: 0.5rem 1rem; border-radius: 2rem; font-weight: 600; font-size: 0.85rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); z-index: 1000; }
        .table th { background-color: var(--primary-color); color: white; border: none; }
        .control-card { border-left: 4px solid; }
        .control-implemented { border-left-color: var(--success-color); }
        .control-partial { border-left-color: var(--warning-color); }
        .control-not-implemented { border-left-color: var(--danger-color); }
    </style>
</head>
<body>
    <!-- Certification Badge -->
    <div class="certification-badge">
        <i class="fas fa-certificate me-1"></i>
        ISO 27001 Certified
    </div>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="d-flex align-items-center mb-4">
                        <div class="iso-logo">ISO</div>
                        <h5 class="text-white mb-0">27001 ISMS</h5>
                    </div>
                    
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" href="/"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/assets"><i class="fas fa-server me-2"></i>Asset Management</a></li>
                        <li class="nav-item"><a class="nav-link" href="/risks"><i class="fas fa-exclamation-triangle me-2"></i>Risk Management</a></li>
                        <li class="nav-item"><a class="nav-link" href="/incidents"><i class="fas fa-bell me-2"></i>Incidents</a></li>
                        <li class="nav-item"><a class="nav-link" href="/policies"><i class="fas fa-file-alt me-2"></i>Policies</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/controls"><i class="fas fa-shield-alt me-2"></i>Security Controls</a></li>
                        <li class="nav-item"><a class="nav-link" href="/audits"><i class="fas fa-search me-2"></i>Audits</a></li>
                        <li class="nav-item"><a class="nav-link" href="/reports"><i class="fas fa-chart-bar me-2"></i>Reports</a></li>
                    </ul>
                </div>
            </nav>
            
            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pt-3 pb-2 mb-3">
                    <!-- Header -->
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center border-bottom mb-4">
                        <h1 class="h2 text-primary">
                            <i class="fas fa-shield-alt me-2"></i>
                            Security Controls (ISO 27001 Annex A)
                        </h1>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#assessmentModal">
                            <i class="fas fa-clipboard-check me-1"></i>Assessment
                        </button>
                    </div>
                    
                    <!-- Controls Overview -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card text-center bg-success text-white">
                                <div class="card-body">
                                    <h3><%= controls.filter(c => c.status === 'Implemented').length %></h3>
                                    <p class="mb-0">Implemented</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-warning text-white">
                                <div class="card-body">
                                    <h3><%= controls.filter(c => c.status === 'Partially Implemented').length %></h3>
                                    <p class="mb-0">Partially Implemented</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-danger text-white">
                                <div class="card-body">
                                    <h3><%= controls.filter(c => c.status === 'Not Implemented').length %></h3>
                                    <p class="mb-0">Not Implemented</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-primary text-white">
                                <div class="card-body">
                                    <h3><%= Math.round((controls.filter(c => c.status === 'Implemented').length / controls.length) * 100) %>%</h3>
                                    <p class="mb-0">Compliance</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Controls by Category -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="fas fa-sitemap me-2"></i>Controls by Category</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <% 
                                        const categories = [...new Set(controls.map(c => c.category))];
                                        categories.forEach(category => {
                                            const categoryControls = controls.filter(c => c.category === category);
                                            const implemented = categoryControls.filter(c => c.status === 'Implemented').length;
                                            const percentage = Math.round((implemented / categoryControls.length) * 100);
                                        %>
                                        <div class="col-md-4 mb-3">
                                            <h6 class="text-primary"><%= category %></h6>
                                            <div class="progress mb-2">
                                                <div class="progress-bar bg-<%= percentage >= 80 ? 'success' : percentage >= 50 ? 'warning' : 'danger' %>" 
                                                     style="width: <%- percentage %>%">
                                                    <%= percentage %>%
                                                </div>
                                            </div>
                                            <small class="text-muted"><%= implemented %>/<%= categoryControls.length %> controls implemented</small>
                                        </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Controls Cards -->
                    <div class="row mb-4">
                        <% controls.forEach(control => { %>
                            <div class="col-md-6 mb-3">
                                <div class="card control-card control-<%= control.status.toLowerCase().replace(/\s+/g, '-') %> h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <h6 class="card-title text-primary mb-0">
                                                <strong><%= control.id %></strong> - <%= control.name %>
                                            </h6>
                                            <span class="badge bg-<%= control.status === 'Implemented' ? 'success' : control.status === 'Partially Implemented' ? 'warning' : 'danger' %>">
                                                <%= control.status %>
                                            </span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label small text-muted">Effectiveness</label>
                                            <div class="progress">
                                                <div class="progress-bar bg-<%= control.effectiveness >= 80 ? 'success' : control.effectiveness >= 60 ? 'warning' : 'danger' %>" 
                                                     style="width: <%- control.effectiveness %>%">
                                                    <%= control.effectiveness %>%
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row small text-muted">
                                            <div class="col-6">
                                                <strong>Category:</strong> <%= control.category %>
                                            </div>
                                            <div class="col-6">
                                                <strong>Last Assessed:</strong> <%= moment(control.lastAssessed).format('DD/MM/YYYY') %>
                                            </div>
                                            <div class="col-12 mt-1">
                                                <strong>Next Review:</strong> <%= moment(control.nextReview).format('DD/MM/YYYY') %>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <button class="btn btn-sm btn-outline-primary me-2">
                                                <i class="fas fa-edit"></i> Assess
                                            </button>
                                            <button class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i> Details
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    
                    <!-- Controls Table -->
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Security Controls Register</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped data-table" id="controlsTable">
                                    <thead>
                                        <tr>
                                            <th>Control ID</th>
                                            <th>Control Name</th>
                                            <th>Category</th>
                                            <th>Status</th>
                                            <th>Effectiveness</th>
                                            <th>Last Assessed</th>
                                            <th>Next Review</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% controls.forEach(control => { %>
                                            <tr>
                                                <td><strong><%= control.id %></strong></td>
                                                <td><%= control.name %></td>
                                                <td><%= control.category %></td>
                                                <td>
                                                    <span class="badge bg-<%= control.status === 'Implemented' ? 'success' : control.status === 'Partially Implemented' ? 'warning' : 'danger' %>">
                                                        <%= control.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="progress" style="height: 20px;">
                                                        <div class="progress-bar bg-<%= control.effectiveness >= 80 ? 'success' : control.effectiveness >= 60 ? 'warning' : 'danger' %>" 
                                                             style="width: <%- control.effectiveness %>%">
                                                            <%= control.effectiveness %>%
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><%= moment(control.lastAssessed).format('DD/MM/YYYY') %></td>
                                                <td><%= moment(control.nextReview).format('DD/MM/YYYY') %></td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary" title="Assess Control">
                                                        <i class="fas fa-clipboard-check"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-info" title="View Evidence">
                                                        <i class="fas fa-folder-open"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#controlsTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[0, 'asc']] // Sort by Control ID
            });
        });
    </script>
</body>
</html>
