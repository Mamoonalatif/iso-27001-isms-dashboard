<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audit Management - ISO 27001 ISMS</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    
    <style>
        :root {
            --primary-color: #1e3a8a;
            --secondary-color: #3b82f6;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --light-color: #f8fafc;
        }
        body { background-color: var(--light-color); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .sidebar { background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); min-height: 100vh; box-shadow: 2px 0 10px rgba(0,0,0,0.1); }
        .sidebar .nav-link { color: rgba(255,255,255,0.9); padding: 0.75rem 1rem; margin: 0.25rem 0; border-radius: 0.5rem; transition: all 0.3s ease; }
        .sidebar .nav-link:hover, .sidebar .nav-link.active { background-color: rgba(255,255,255,0.2); color: white; transform: translateX(5px); }
        .card { border: none; border-radius: 1rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .iso-logo { width: 40px; height: 40px; background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 10px; }
        .certification-badge { position: absolute; top: 1rem; right: 1rem; background: linear-gradient(135deg, #ffd700, #ffed4e); color: #1f2937; padding: 0.5rem 1rem; border-radius: 2rem; font-weight: 600; font-size: 0.85rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); z-index: 1000; }
        .table th { background-color: var(--primary-color); color: white; border: none; }
    </style>
</head>
<body>
    <!-- Certification Badge -->
    <div class="certification-badge">
        <i class="fas fa-certificate me-1"></i>
        ISO 27001 Certified
    </div>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="d-flex align-items-center mb-4">
                        <div class="iso-logo">ISO</div>
                        <h5 class="text-white mb-0">27001 ISMS</h5>
                    </div>
                    
                    <ul class="nav flex-column">
                        <li class="nav-item"><a class="nav-link" href="/"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/assets"><i class="fas fa-server me-2"></i>Asset Management</a></li>
                        <li class="nav-item"><a class="nav-link" href="/risks"><i class="fas fa-exclamation-triangle me-2"></i>Risk Management</a></li>
                        <li class="nav-item"><a class="nav-link" href="/incidents"><i class="fas fa-bell me-2"></i>Incidents</a></li>
                        <li class="nav-item"><a class="nav-link" href="/policies"><i class="fas fa-file-alt me-2"></i>Policies</a></li>
                        <li class="nav-item"><a class="nav-link" href="/controls"><i class="fas fa-shield-alt me-2"></i>Security Controls</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/audits"><i class="fas fa-search me-2"></i>Audits</a></li>
                        <li class="nav-item"><a class="nav-link" href="/reports"><i class="fas fa-chart-bar me-2"></i>Reports</a></li>
                    </ul>
                </div>
            </nav>
            
            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pt-3 pb-2 mb-3">
                    <!-- Header -->
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center border-bottom mb-4">
                        <h1 class="h2 text-primary">
                            <i class="fas fa-search me-2"></i>
                            Audit Management (ISO 27001 A.18.2)
                        </h1>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#scheduleAuditModal">
                            <i class="fas fa-calendar-plus me-1"></i>Schedule Audit
                        </button>
                    </div>
                    
                    <!-- Audit Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card text-center bg-primary text-white">
                                <div class="card-body">
                                    <h3><%= audits.length %></h3>
                                    <p class="mb-0">Total Audits</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-success text-white">
                                <div class="card-body">
                                    <h3><%= audits.filter(a => a.status === 'Completed').length %></h3>
                                    <p class="mb-0">Completed</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-warning text-white">
                                <div class="card-body">
                                    <h3><%= audits.filter(a => a.status === 'Scheduled').length %></h3>
                                    <p class="mb-0">Scheduled</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center bg-info text-white">
                                <div class="card-body">
                                    <h3><%= audits.filter(a => a.type === 'Internal').length %></h3>
                                    <p class="mb-0">Internal Audits</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Audit Calendar -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="fas fa-calendar me-2"></i>Audit Schedule</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6 class="text-primary">Upcoming Audits</h6>
                                            <% 
                                            const upcomingAudits = audits.filter(a => moment(a.startDate).isAfter(moment()) && a.status === 'Scheduled');
                                            if (upcomingAudits.length > 0) {
                                            %>
                                                <% upcomingAudits.forEach(audit => { %>
                                                    <div class="border-start border-primary border-3 ps-3 mb-3">
                                                        <h6 class="mb-1"><%= audit.title %></h6>
                                                        <p class="mb-1 text-muted"><%= audit.auditor %></p>
                                                        <small class="text-muted">
                                                            <i class="fas fa-calendar me-1"></i>
                                                            <%= moment(audit.startDate).format('DD/MM/YYYY') %> - <%= moment(audit.endDate).format('DD/MM/YYYY') %>
                                                        </small>
                                                    </div>
                                                <% }); %>
                                            <% } else { %>
                                                <p class="text-muted">No upcoming audits scheduled</p>
                                            <% } %>
                                        </div>
                                        <div class="col-md-6">
                                            <h6 class="text-success">Recent Completed Audits</h6>
                                            <% 
                                            const recentAudits = audits.filter(a => a.status === 'Completed').slice(0, 3);
                                            if (recentAudits.length > 0) {
                                            %>
                                                <% recentAudits.forEach(audit => { %>
                                                    <div class="border-start border-success border-3 ps-3 mb-3">
                                                        <h6 class="mb-1"><%= audit.title %></h6>
                                                        <p class="mb-1 text-muted"><%= audit.auditor %></p>
                                                        <small class="text-muted">
                                                            <i class="fas fa-check-circle me-1"></i>
                                                            Completed <%= moment(audit.endDate).format('DD/MM/YYYY') %>
                                                        </small>
                                                    </div>
                                                <% }); %>
                                            <% } else { %>
                                                <p class="text-muted">No recent completed audits</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Audits Table -->
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Audit Register</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped data-table" id="auditsTable">
                                    <thead>
                                        <tr>
                                            <th>Audit Title</th>
                                            <th>Type</th>
                                            <th>Status</th>
                                            <th>Auditor</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Findings</th>
                                            <th>Recommendations</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% audits.forEach(audit => { %>
                                            <tr>
                                                <td><strong><%= audit.title %></strong></td>
                                                <td>
                                                    <span class="badge bg-<%= audit.type === 'Internal' ? 'info' : 'warning' %>">
                                                        <%= audit.type %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= audit.status === 'Completed' ? 'success' : audit.status === 'Scheduled' ? 'warning' : 'secondary' %>">
                                                        <%= audit.status %>
                                                    </span>
                                                </td>
                                                <td><%= audit.auditor %></td>
                                                <td><%= moment(audit.startDate).format('DD/MM/YYYY') %></td>
                                                <td><%= moment(audit.endDate).format('DD/MM/YYYY') %></td>
                                                <td>
                                                    <% if (audit.findings > 0) { %>
                                                        <span class="badge bg-danger"><%= audit.findings %></span>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (audit.recommendations > 0) { %>
                                                        <span class="badge bg-info"><%= audit.recommendations %></span>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary" title="Edit Audit">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <% if (audit.status === 'Completed') { %>
                                                        <button class="btn btn-sm btn-outline-success" title="View Report">
                                                            <i class="fas fa-file-alt"></i>
                                                        </button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#auditsTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[4, 'desc']] // Sort by Start Date
            });
        });
    </script>
</body>
</html>
